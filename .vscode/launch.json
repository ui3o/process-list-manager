    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "start node.service",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "env": {
                "POL_CONFIG_FOLDER":"${workspaceFolder}/test"
            },
            "program": "${workspaceFolder}/bin/pol.js",
            "args": ["start", "code.service"],
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "start --all",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "env": {
                "POL_CONFIG_FOLDER":"${workspaceFolder}/test"
            },
            "program": "${workspaceFolder}/bin/pol.js",
            "args": ["start", "--all"],
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "boot",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "env": {
                "POL_CONFIG_FOLDER":"${workspaceFolder}/test"
            },
            "program": "${workspaceFolder}/bin/pol.js",
            "args": ["boot"],
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "test",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "env": {
                "POL_CONFIG_FOLDER":"${workspaceFolder}/test"
            },
            "program": "${workspaceFolder}/tmp/dag-graph.js",
            "args": ["boot"],
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        },
        {
            "name": "Attach",
            "port": 9229,
            "request": "attach",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node"
        }
    ]
}